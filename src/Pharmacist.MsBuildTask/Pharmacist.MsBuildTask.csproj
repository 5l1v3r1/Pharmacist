<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp2.1;net461</TargetFrameworks>
    <Package>Pharmacist.MSBuildTask</Package>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Condition="'$(TargetFramework)' == 'net461' " Include="Microsoft.Build.Tasks.Core" Version="14.3" PrivateAssets="all" />
    <PackageReference Condition="'$(TargetFramework)' == 'netcoreapp2.1' " Include="Microsoft.Build.Tasks.Core" Version="15.1.548" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup Label="Package">
    <None Include="targets\pharmacist.targets" PackagePath="build\net461" Pack="true" />
    <None Include="targets\pharmacist.targets" PackagePath="buildTransitive\net461" Pack="true" />
    <None Include="targets\pharmacist.targets" PackagePath="build\netstandard1.4" Pack="true" />
    <None Include="targets\pharmacist.targets" PackagePath="buildTransitive\netstandard1.4" Pack="true" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Pharmacist.Core\Pharmacist.Core.csproj" />
  </ItemGroup>
</Project>
